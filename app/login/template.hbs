<div class="d-flex justify-content-start">
  <form {{action "authenticate" on="submit"}} class="form-signin">
    {{input class="form-control" placeholder="Email address" value=username type="email" required=true }} <br />
    {{input class="form-control" placeholder="Password" value=password type="password"}} <br />
    <p class="text-danger">{{err}}</p>
    <button class="btn btn-lg btn-primary btn-block" type="submit" {{action "authenticate"}}>Login</button>
  </form>
</div>